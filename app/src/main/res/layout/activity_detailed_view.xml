<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/item_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/gif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:paddingTop="@dimen/item_margin"
        android:paddingBottom="@dimen/item_margin"/>

    <ImageView
        android:id="@+id/gif_detailed_view"
        android:paddingTop="@dimen/item_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/user_profile_tv"
            android:textSize="@dimen/user_text_size"
            android:paddingTop="@dimen/item_margin_double"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:layout_toEndOf="@+id/user_profile_tv"
            android:id="@+id/user_profile_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>